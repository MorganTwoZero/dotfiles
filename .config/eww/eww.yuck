(deflisten window `bash scripts/hyprland window`)
(deflisten workspaces `bash scripts/sway-workspaces.sh`)
(deflisten kb_layout `bash scripts/kb-layout-change.sh`)
(deflisten notifications "swaync-client -s")
(deflisten volume :initial "0" "bash ./audio.sh volume")

(defwidget bar []
  (centerbox :orientation "v"
    :width 42
    (box
        :class "segment-top"
        :space-evenly false
        :valign "start"
        :orientation "v"
        (button
          :onclick "rofi -show combi -combi-modes 'window,drun' &"
          "ï’µ")
        (panel_workspaces :orientation "v")
    )
    (box :valign "center"
         :class "segment-middle" 
      )
    (box :valign "end"
         :class "segment-bottom" 
      (bottom))))

(defwidget panel_workspaces [orientation] (box 
    (eventbox :class "button workspaces"
        (box
            :space-evenly false
            :orientation orientation
            (for workspace in {workspaces}
                (button
                    :class "workspace-btn ${workspace.focused == true ? "focused" : ""}"
                    :onclick "swaymsg workspace number ${workspace.num}"
                    :valign "center"
                    (label 
                      :class "icon"
                      :text {substring(workspace.name, 3, 100)}
                    )
                )
            )
        )
    )
))

(defwidget bottom []
  (box :orientation "v"
       :valign "end"
       :space-evenly false
       :spacing "5"

    (tray)
    (volume)
    (kb_layout)
    (date-time)
    (notifications)
  )
)

(defwidget kb_layout []
  (box :class "kb_layout"
       :space-evenly true
       :halign "fill"
       :vexpand true
       "${kb_layout == "En" ? "ðŸ‡ºðŸ‡¸" : "ðŸ‡·ðŸ‡º"}"
  )
)

(defwidget notifications []
  (button 
    :class "notifications"
    :halign "fill"
    :onclick "swaync-client -t -sw"
    "${notifications.count} ïƒ³"
  )
)

(defwidget volume []
  (box :class "volume"
       :space-evenly false
       :valign "fill"
       :vexpand false
       (eventbox :onscroll "if [ '{}' == 'up' ]; then pamixer -i 5; else pamixer -d 5; fi"
                :onrightclick "pavucontrol &"
                :vexpand true
                :valign "fill"
                (box :orientation "v"
                     :valign "fill"
                     :vexpand true
                  (button :onclick "playerctl play-pause"
                    (box :orientation "v"
                         :valign "fill"
                         :vexpand true
                         "${volume}%"
                    )
                  )
                )
      )
  )
)

(defwidget date-time []
  (tooltip
    :class "date-time"
    (calendar :class "date")
    (box :orientation "h" 
      "${hour}:${min}"
    )
  )
)

(defwidget date []
  (box :orientation "h" 
       :class "date"
    "${day_word} ${day}.${month}"))

(defpoll hour :interval "1s" "date +%H")
(defpoll min  :interval "1s" "date +%M")

(defpoll day_word :interval "10m" "date +%a | tr [:upper:] [:lower:]")
(defpoll day      :interval "10m" "date +%d")
(defpoll month    :interval "1h"  "date +%m")

(defwidget tray []
  (systray :orientation "v")
)

(defwindow bar
    :monitor 0
    :exclusive true
    :stacking "fg"
    :focusable false
    :geometry (geometry :width "38px"
                        :height "100%"
                        :anchor "center left")(bar))

